{
  "extends": "../tsconfig-base.json",
  "display": "Node 14",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "./lib/common/src",
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "__test__/**/*.ts",
  ]
}